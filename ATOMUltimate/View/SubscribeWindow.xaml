<Window x:Class="ATOMUltimate.View.SubscribeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subscribe" Height="236.985" Width="399.104">
    <Grid Margin="0,0,0,1" FocusManager.FocusedElement="{Binding ElementName=UrlTextBox}">
        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="UrlTextBox" TextWrapping="Wrap" AcceptsReturn="True" HorizontalAlignment="Stretch" SelectionStart="0" SelectionLength="7" VerticalAlignment="Stretch"  Margin="10,34,10,10"/>
        <Button x:Name="OkButton" Content="OK" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="75" Click="OkButton_Click" Grid.Row="1" Height="20"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click" IsCancel="True" Grid.Row="1" Height="20"/>
        <Label Content="Wpisz adresy stron dostarczające subskrypcje" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top" Width="254"/>

    </Grid>
</Window>
